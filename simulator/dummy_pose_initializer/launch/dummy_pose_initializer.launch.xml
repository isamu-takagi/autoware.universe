<launch>
  <arg name="config_file" default="$(find-pkg-share pose_initializer)/config/pose_initializer.param.yaml"/>

  <!-- Initialize the pose of simulator. -->
  <node pkg="dummy_pose_initializer" exec="dummy_pose_initializer" name="dummy_pose_initializer">
    <remap from="sim_reset" to="/initialpose3d"/>
  </node>

  <!-- Call AD API when initialpose from rviz. -->
  <node pkg="pose_initializer" exec="initial_pose_adaptor" name="initial_pose_adaptor">
    <param from="$(var config_file)"/>
    <remap from="initialpose" to="/initialpose"/>
    <remap from="pointcloud_map" to="/map/pointcloud_map"/>
  </node>
</launch>
